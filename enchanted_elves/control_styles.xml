<!-- The whole toolbar, add border="yes" in the control.xml if you want to see a border -->
<!-- Here you align your buttons, using X and Y cords NOTE: 1 = 1px in 800x600 -->
<!-- bar/@always_resize="no" makes the resize box show only if you press shift and move the mouse over the widget -->
<!-- Default bar width/height = button width/height * n_buttons + 6 -->
<!-- Minimum bar width/height = 16 * n_buttons + 6 -->

<!-- Horizontal simplified (default for new players, used in tutorial) -->
<style1>

    <bar width="710" height="70" min_w="182" min_h="22" always_resize="yes"  />
    <buttons width="64" height="64" hide_width="32" hide_height="32" />

    <!-- Standard values -->
    <button name="ShowButtonUp"     x="16"  y="16" />
    <button name="ShowButtonDown"   x="16"  y="16" />

    <button name="ChatButton"       x="64"  y="0" />
    <button name="SkillsButton"     x="128" y="0" />
    <button name="InventoryButton"  x="192" y="0" />
    <button name="QuestButton"      x="256" y="0" />
    <button name="SpellBookButton"  x="320" y="0" />
    <button name="AttackButton"     x="384" y="0" />
    <button name="InfoButton"       x="448" y="0" />
    <button name="HelpButton"       x="512" y="0" />
    <button name="OptionsButton"    x="576" y="0" />
    <button name="QuitButton"       x="640" y="0" />

    <!-- Hidden buttons -->
    <button name="GuildButton"      x="-500" y="-500" />
    <button name="PetitionButton"   x="-500" y="-500" />
    <button name="BuddyButton"      x="-500" y="-500" />
    <button name="GroupButton"      x="-500" y="-500" />
    <button name="ShortcutButton"   x="-500" y="-500" />
    
</style1>

